{
  "name": "gg-components",
  "version": "1.0.0",
  "description": "Reusable transpiled React components",
  "repository": {
    "type": "git",
    "url": "git://github.com/georgegillams/gg-components.git"
  },
  "author": "George Gillams",
  "license": "MIT",
  "scripts": {
    "prerelease": "npm run transpile",
    "release": "(cd dist && npx release-it)",
    "transpile": "npm run pretranspile && npm run transpile:js && npm run transform:js && npm run transpile:sass && npm run transpile:copy-tokens && npm run transpile:link-package.json",
    "transpile:js": "babel src -d dist --copy-files",
    "transform:js": "node scripts/transform-js-scss-css-imports.js",
    "transpile:sass": "node scripts/build-sass-in-place.js",
    "transpile:copy-tokens": "cp -R ./src/Tokens/* ./dist/Tokens/",
    "transpile:link-package.json": " ln -Ff ./package.json ./dist/package.json && ln -Ff ./package-lock.json ./dist/package-lock.json",
    "clean": "npm run test:clean && npm run build:clean",
    "dev": "npm run start:dev",
    "fix:adapter-core-5": "cp ./scripts/adapter_core5.js node_modules/webrtc-adapter/src/js/adapter_core5.js",
    "fix:package-lock": "sed -i '' -e 's/http:\\/\\//https:\\/\\//g' $(find . -name 'package-lock.json')",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "lint:scss": "stylelint 'packages/**/*.scss' --syntax scss",
    "transpile:clean": "rimraf ./dist",
    "pretranspile": "npm run transpile:clean",
    "pretest": "npm run test:clean",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "node-sass": "node-sass",
    "storybook": "start-storybook -p 9001",
    "build": "build-storybook -c .storybook -o storybook-dist",
    "backstopjs:test": "node ./node_modules/http-server/bin/http-server ./storybook-dist -p 9001 -a 127.0.0.1 & (sleep 2 && node ./scripts/backstopjs/backstop.js)",
    "backstopjs:test:allow-failure": "node ./node_modules/http-server/bin/http-server ./storybook-dist -p 9001 -a 127.0.0.1 & (sleep 2 && node ./scripts/backstopjs/backstop.js --allowFailure)",
    "start": "npm run storybook",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:clean": "rimraf ./coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll"
  },
  "main": "dist/index.js",
  "release-it": {
    "git": {
      "requireCleanWorkingDir": false
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax scss"
    ]
  },
  "dependencies": {
    "@magica11y/prefers-reduced-motion": "^1.0.5",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "recompose": "^0.30.0",
    "scroll-into-view": "^1.12.2",
    "youtube-embed-video": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.6.3",
    "@babel/register": "^7.6.2",
    "@storybook/addon-a11y": "^5.2.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-backgrounds": "^5.2.5",
    "@storybook/addon-knobs": "^5.2.5",
    "@storybook/addon-viewport": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "add-asset-html-webpack-plugin": "3.1.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "backstopjs": "^4.3.2",
    "bpk-mixins": "^19.0.16",
    "cross-env": "^7.0.1",
    "css-loader": "3.3.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-skyscanner-with-prettier": "^0.8.0",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-redux-saga": "^1.1.1",
    "eslint_d": "^8.0.0",
    "file-loader": "5.1.0",
    "http-server": "^0.12.0",
    "image-webpack-loader": "^6.0.0",
    "jest-cli": "^24.9.0",
    "node-sass": "^4.13.0",
    "node-sass-tilde-importer": "^1.0.2",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.11.0",
    "release-it": "^13.0.0",
    "rimraf": "3.0.2",
    "sass": "^1.23.3",
    "sass-loader": "^8.0.0",
    "storybook-dark-mode": "^0.4.0",
    "style-loader": "^1.0.0",
    "stylelint": "^13.1.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "src/.*\\.test\\.js$",
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/scripts/stubs/styleStub.js",
      "^.+\\.svg$": "<rootDir>/scripts/stubs/fileStub.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "heroku-run-build-script": true
}
