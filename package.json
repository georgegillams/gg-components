{
  "name": "gg-components",
  "version": "5.0.7",
  "description": "Reusable transpiled React components",
  "repository": {
    "type": "git",
    "url": "git://github.com/georgegillams/gg-components.git"
  },
  "author": "George Gillams",
  "license": "MIT",
  "scripts": {
    "prerelease": "npm run transpile",
    "release": "babel-node scripts/release.js",
    "release:major": "npm run release -- --major",
    "release:minor": "npm run release -- --minor",
    "release:patch": "npm run release -- --patch",
    "transpile": "npm run pretranspile && npm run transpile:js && npm run transform:js && npm run transpile:sass && npm run transpile:copy-tokens && npm run transpile:remove-stories",
    "transpile:js": "babel src -d dist --copy-files",
    "transform:js": "babel-node scripts/transform-js-scss-css-imports.js",
    "transpile:sass": "babel-node scripts/build-sass-in-place.js",
    "transpile:copy-tokens": "cp -R ./src/Tokens/* ./dist/Tokens/",
    "transpile:remove-stories": "find ./dist -name \"stories.js\" -exec rm {} \\;",
    "clean": "npm run test:clean && npm run build:clean",
    "dev": "npm run start:dev",
    "fix:adapter-core-5": "cp ./scripts/adapter_core5.js node_modules/webrtc-adapter/src/js/adapter_core5.js",
    "fix:package-lock": "sed -i '' -e 's/http:\\/\\//https:\\/\\//g' $(find . -name 'package-lock.json')",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:sass": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:sass:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "transpile:clean": "rimraf ./dist",
    "pretranspile": "npm run transpile:clean",
    "pretest": "npm run test:clean",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "node-sass": "node-sass",
    "storybook": "start-storybook -p 9001",
    "build": "build-storybook -c .storybook -o build",
    "build:test": "npm run build",
    "backstopjs:test": "node ./node_modules/http-server/bin/http-server ./build -p 9001 -a 127.0.0.1 & (sleep 2 && babel-node ./scripts/backstopjs/backstop.js)",
    "backstopjs:test:allow-failure": "node ./node_modules/http-server/bin/http-server ./build -p 9001 -a 127.0.0.1 & (sleep 2 && babel-node ./scripts/backstopjs/backstop.js --allowFailure)",
    "start": "npm run storybook",
    "prod": "http-server build",
    "start:aws": "AWS=true npm run prod",
    "test": "npm run test:lint && npm run test:jest",
    "test:jest": "cross-env NODE_ENV=test jest --coverage",
    "test:lint": "npm run lint:sass",
    "test:clean": "rimraf ./coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax scss"
    ]
  },
  "dependencies": {
    "@magica11y/prefers-reduced-motion": "^1.0.5",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "recompose": "^0.30.0",
    "youtube-embed-video": "^1.2.1"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-flow": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@babel/register": "^7.10.3",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-backgrounds": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "add-asset-html-webpack-plugin": "3.1.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "backstopjs": "^5.0.1",
    "cross-env": "^7.0.2",
    "css-loader": "3.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.3.1",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-skyscanner-with-prettier": "^0.8.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-flowtype": "^5.1.3",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint_d": "^9.0.0",
    "file-loader": "6.0.0",
    "http-server": "^0.12.3",
    "image-webpack-loader": "^6.0.0",
    "jest-cli": "^26.1.0",
    "node-sass": "^4.14.1",
    "node-sass-tilde-importer": "^1.0.2",
    "react-test-renderer": "^16.13.1",
    "rimraf": "3.0.2",
    "sass": "^1.26.9",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.2",
    "storybook-dark-mode": "^0.6.1",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-skyscanner": "^2.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "src/.*\\.test\\.js$",
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "moduleNameMapper": {
      "^.+\\.scss$": "<rootDir>/scripts/stubs/styleStub.js",
      "^.+\\.svg$": "<rootDir>/scripts/stubs/fileStub.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "heroku-run-build-script": true
}
